<VirtualHost *:{{ apache_http_port }}>
    ServerName {{ apache_server_name }}
    DocumentRoot {{ wordpress_dir }}

    ErrorLog {{ apache_log_dir }}/error-{{ apache_server_name }}.log
    CustomLog {{ apache_log_dir }}/access-{{ apache_server_name }}.log combined

    <Directory {{ wordpress_dir }}>
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>